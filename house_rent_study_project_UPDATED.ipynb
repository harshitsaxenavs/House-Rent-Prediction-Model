metrics = {
    "Linear Regression R2": r2_score(y_test, y_pred_lr),
    "Random Forest R2": r2_score(y_test, y_pred_rf),
    "Linear Regression RMSE": np.sqrt(mean_squared_error(y_test, y_pred_lr)),
